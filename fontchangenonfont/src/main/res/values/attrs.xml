<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="xfont" format="string"/>
    <attr name="xfontStyle" format="enum">
        <enum name="normal" value="0"/>
        <enum name="italic" value="1"/>
        <enum name="bold" value="2"/>
        <enum name="bold_italic" value="3"/>
    </attr>

    <declare-styleable name="FTextView">
        <attr name="xfont" />
        <attr name="xfontStyle"/>
    </declare-styleable>
    <declare-styleable name="FButton">
        <attr name="xfont" />
        <attr name="xfontStyle"/>
    </declare-styleable>
    <declare-styleable name="FEditText">
        <attr name="xfont" />
        <attr name="xfontStyle"/>
    </declare-styleable>
</resources>